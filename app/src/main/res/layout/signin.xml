<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryanshebeck.metisreferrals.SignIn"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/firstName"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="First Name:"
        android:textAlignment="textStart"
        android:textColor="#1a385a"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/firstResp"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/firstName"
        android:layout_below="@+id/firstName"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/middleInit"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Middle Initial"
        android:textAlignment="textStart"
        android:textColor="#1a385a"
        android:layout_below="@+id/firstResp"
        android:layout_alignStart="@+id/firstResp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/middleResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Last Name"
        android:textAlignment="textStart"
        android:textColor="#1a385a"
        android:layout_below="@+id/middleInit"
        android:layout_alignEnd="@+id/firstName"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/lastResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>
