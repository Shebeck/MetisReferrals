<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.bryanshebeck.metisreferrals.Home">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/homeScreenProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profmdpi"
        android:layout_column="0"
        android:layout_row="0"/>

    <ImageButton
        android:id="@+id/homeScreenAppointmentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/apptsldpi"
        android:layout_column="0"
        android:layout_row="1"/>

    <ImageButton
        android:id="@+id/homeScreenMyDocsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mydocsldpi"
        android:layout_column="0"
        android:layout_row="2"/>

    <ImageButton
        android:id="@+id/homeScreenAboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/about"
        tools:layout_editor_absoluteY="458dp"
        android:layout_column="0"
        android:layout_row="3"/>

    </GridLayout>

</RelativeLayout>